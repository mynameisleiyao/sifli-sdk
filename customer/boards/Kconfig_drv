                    range 1 216
                    default 34
                config BSP_I2C2_SDA_PIN
                    int "I2C2 sda pin number"
                    range 1 216
                    default 35
            endif

            config BSP_USING_SOFT_I2C3
                bool "Enable I2C3 BUS"
                default n

            if BSP_USING_SOFT_I2C3
