    menuconfig BSP_USING_ADC
        bool "Enable ADC"
        default n
        select RT_USING_ADC
        if BSP_USING_ADC
            config BSP_USING_ADC1
                bool "Enable GPADC1"
                default n
            config BSP_GPADC_USING_DMA
                bool "Enable GPADC DMA mode"
                default n
            config BSP_GPADC_SUPPORT_MULTI_CH_SAMPLING
                bool "Enable GPADC support multi channel sampling"
                default n       
            if BSP_GPADC_SUPPORT_MULTI_CH_SAMPLING    
                    config BSP_GPADC_GPTIME_PEROID
                        int "GPADC gptimer trigger peroid,uint:us"
                        default 100
                    choice
                        prompt "gpadc use gptimer  select"
                        default BSP_GPADC_USE_GPTIME1
                        
                        config BSP_GPADC_USE_GPTIME1
                            bool "gpadc use gptimer1"
                        config BSP_GPADC_USE_GPTIME2
                            bool "gpadc use gptimer2"
                        config BSP_GPADC_USE_GPTIME3
                            depends on !SOC_SF32LB52X
                            bool "gpadc use gptimer3"
                        config BSP_GPADC_USE_GPTIME4
                            depends on !SOC_SF32LB52X
                            bool "gpadc use gptimer4"
                        config BSP_GPADC_USE_GPTIME5
                            depends on !SOC_SF32LB52X
                            bool "gpadc use gptimer5"
                    endchoice
            endif
        endif

